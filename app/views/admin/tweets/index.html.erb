<%= currently_at('Admin') %>
<%= currently_at_left('Admin', 'Tweets') %>
<div class='col-lg-10'>
  <h1>System Tweets</h1>

  <table class='table table-hover'>
    <thead class='thead-default'>
      <th class= 'text-center'>Tweet id</th>
      <th class= 'text-center'>Tweet number</th>
      <th class= 'text-center'>Tweet text fragment</th>
      <th class= 'text-center' colspan='2'>Actions</th>
    </thead>
    <% @tweets.each do |tweet| %>
      <tr class= 'text-center'>
        <td><%= tweet.id %></td>
        <td><%= tweet.number %></td>
        <td class='fit-text'><%= tweet.text %></td>
        <td>
          <%= link_to edit_admin_tweet_path(tweet) do %>
            <span class='glyphicon glyphicon-pencil' data-toggle='tooltip' title='Edit Tweet'></span>
          <% end %>
        </td>
        <td>
          <%= link_to admin_tweet_path(tweet), method: :delete, data: { confirm: 'Delete this tweet?' } do %>
            <span class='glyphicon glyphicon-remove' data-toggle='tooltip' title='Delete Tweet'></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <div class='flickr_pagination'>
    <%= will_paginate @tweets %>
  </div>

  <div>
    <%= link_to 'Create New Tweet', new_admin_tweet_path, class: 'btn btn-primary' %>
  </div>
</div>
