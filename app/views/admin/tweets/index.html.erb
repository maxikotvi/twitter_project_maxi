<%= currently_at('Admin') %>
<%= currently_at_left('Admin', 'Tweets') %>
<div class='col-lg-10'>
  <h1>System Tweets</h1>

  <%= text_field_tag :search_field, nil, class: 'form-group' %>
  <%= button_tag id: 'search_button', class: 'btn btn-default' do %>
    <span class='glyphicon glyphicon-search'></span>
  <% end %>

  <div id='tweets_table_container'>
    <table class='table table-hover'>
      <thead class='thead-default'>
       <th class= 'text-center'><%= sortable_column 'id', 'Tweet id' %></th>
       <th class= 'text-center'><%= sortable_column 'number', 'Tweet number' %></th>
       <th class= 'text-center non-sort-column'>Tweet text fragment</th>
       <th class= 'text-center non-sort-column' colspan='2'>Actions</th>
      </thead>
      <%= render partial: 'tweets_table_body', locals: { tweets: @tweets } %>
    </table>
  </div>

  <div class='flickr_pagination'>
    <%= render partial: 'admin/will_paginate', locals: { resources: @tweets } %>
  </div>

  <div>
    <%= link_to 'Create New Tweet', new_admin_tweet_path, class: 'btn btn-primary' %>
  </div>
</div>
