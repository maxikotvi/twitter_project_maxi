<%= form_for [:admin, tweet] do |f| %>

  <%= render partial: 'errors', locals: { tweet: tweet } %>

  <div class='form-group'>
    <%= f.label :number %><br />
    <%= f.number_field :number, class: 'form-group' %>
  </div>

  <div class='form-group'>
    <%= f.label :Text %><br />
    <%= f.text_area :text, size:'45x4', class: 'form-group' %>
  </div>

  <div class='form-group'>
    <%= f.label :author_name %><br />
    <%= f.text_field :user_name, class: 'form-group' %>
  </div>

  <div class='form-group'>
    <%= f.label :author_screen_name %><br />
    <%= f.text_field :user_screen_name, class: 'form-group' %>
  </div>

  <div class='form-group'>
    <%= f.label :author_profile_url %><br />
    <%= f.url_field :user_url, class: 'form-group' %>
  </div>

  <div class='form-group'>
    <%= f.label :author_profile_image_url %><br />
    <%= f.url_field :user_profile_img, class: 'form-group' %>
  </div>

  <div class='form-group'>
    <%= f.fields_for :tweet_images, tweet.tweet_images do |t| %>
      <%= t.file_field :image %>
    <% end %>
  </div>

  <br>
  <div class='actions'>
    <%= f.submit 'Done', class: 'btn btn-success' %>
    <%= link_to 'Cancel', admin_tweets_path, class: 'btn btn-link' %>
  </div>

<% end %>
