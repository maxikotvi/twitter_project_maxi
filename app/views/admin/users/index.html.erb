<%= currently_at('Admin') %>
<%= currently_at_left('Admin', 'Users') %>
<h1>Users</h1>
<table class='table table-hover'>
  <thead>
    <th>Email</th>
    <th>Admin?</th>
    <th class= 'text-center' colspan='2'>Actions</th>
  </thead>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %> </td>
      <td><%= user.admin ? 'Yes' : 'No' %> </td>
      <td class='text-center'>
        <%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-link btn-xs' %>
        <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link btn-xs' %>
      </td>
    </tr>
  <% end %>
</table>

<div>
  <%= link_to 'Create New User', new_admin_user_path, class: 'btn btn-primary' %>
</div>
